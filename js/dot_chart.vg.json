{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/world-happiness-report-2021.csv"},
  "width":"container",
  "height":"container",
  "encoding": {
    "y": {
        "field": "Ladder score", 
        "type": "quantitative",
        "scale": {"zero": false},
        "axis":{"grid": false}
      },
    "x": {
      "field": "Regional indicator",
      "type": "nominal",
      "axis":{"labels":false, "ticks":false, "title":null}
    }, 
    "tooltip":[
        {"field":"Ladder score"},
        {"field":"Country name"},
        {"field":"Regional indicator"}
      ]
},"layer": [{
    "selection":{
      "selected_region":{
        "type":"multi",
        "fields":["Regional indicator"],
        "bind":"legend"
      }
    },
    "mark": {
      "type": "circle"
    },
    "encoding": {
      "color":{
        "field":"Regional indicator",
        "type": "nominal"
      },
      "opacity":{
        "condition":{"selection":"selected_region", "value":1},
        "value":0.1
      }
    }
  },
  {
    "mark" : {
      "type": "text",
      "align":"center",
      "baseline":"bottom",
      "dy":-3,
      "opacity":{
        "expr": "datum['Country name']=='Australia' ||  datum['Country name']=='Singapore' || datum['Country name']=='China' || datum['Country name']=='Finland' || datum['Country name']=='Afghanistan'? 0.7 : 0"}
    },
    "encoding": {
      "text":{"field":"Country name"},
      "color":{"value":"black"},
      "opacity":{
        "condition":{"selection":"selected_region"},
        "value":0
      }
    }
  }
]
,"config": {
  "style": {
    "cell": {
      "stroke": "transparent"
    }
  }
}
}